---
aws_inventory:
    children:
        aws:
            hosts:
                {{ project.name | lower }}-instance:
                    ansible_user: ec2-user
                    ansible_host: {{ instance_private_ip.stdout }}
                    ansible_ssh_private_key_file: "{{ playbook_dir }}/keys/{{ project.aws.key_name }}.pem"
        local:
            hosts:
                localhost:
                    ansible_connection: local
